# Gratonite API Production Example (Oracle Cloud)
# Copy to .env in production and replace all placeholder values.

PORT=4000
NODE_ENV=production

# Core data stores
DATABASE_URL=postgres://<user>:<password>@<postgres-host>:5432/<database>
REDIS_URL=redis://<redis-host>:6379

# Object storage (MinIO or S3-compatible)
MINIO_ENDPOINT=<storage-hostname>
MINIO_PORT=9000
MINIO_ACCESS_KEY=<access-key>
MINIO_SECRET_KEY=<secret-key>
MINIO_USE_SSL=true

# Security secrets (MUST be high entropy)
JWT_SECRET=<64+ char random secret>
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
ENCRYPTION_KEY=<32-byte key material>

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.<domain>/api/v1/auth/google/callback

# Strict browser + websocket origins
CORS_ORIGIN=https://app.<domain>,https://<domain>

# Public file URL root
CDN_BASE_URL=https://cdn.<domain>

# LiveKit
LIVEKIT_API_KEY=<livekit-key>
LIVEKIT_API_SECRET=<livekit-secret>
LIVEKIT_URL=wss://api.<domain>/livekit
LIVEKIT_HTTP_URL=https://api.<domain>/livekit

# TURN/STUN
TURN_URL=turn:api.<domain>:3478
TURN_USERNAME=<turn-username>
TURN_PASSWORD=<turn-password>

# Moderation/economy controls
COMMUNITY_SHOP_MODERATOR_IDS=
ECONOMY_AUDITOR_IDS=

